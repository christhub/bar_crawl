<% if @coffee == true  %>
  <h3><%= @game.name %> <%= @event.cafe %></h3>
<% else %>
  <h3><%= @game.name %> <%= @event.bar %></h3>
<% end %>

<div class="col-md-8">
  <div class="header-block">
    <h1>SE 39th and Hawthorne</h1>
  </div>
  <div class="status">
    <strong><%=@green_status%></strong>
  </div>

  <div class="col-md-4">
    <div class="stats-box">
        <p>char name</p>
        <center><div class="avatar"><img src="/img/avatar.png" alt="gravitar"/></div></center><br>
        <span class="col-sm-1">Energy: <span class="energy-level"><%=  %></span></span><br>
        <span class="col-sm-1">Happiness: <span class='happiness-level'><%=  %></span></span><br>
        <span class="col-xs-1">Money: </span><span class="col-xs-offset-6 col-xs-1">$</span><span class="money-level"> <%=  %></span>
    </div>
  </div>


<a href="/turn/<%= @game.stop_id %>" class="btn-turn-event btn">Continue</a>
